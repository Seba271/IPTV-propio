<?xml version="1.0" encoding="utf-8"?>
<!-- Manifest principal de la aplicación que define los permisos, actividades y configuración general -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos necesarios para la aplicación -->
    <!-- Permiso para acceder a Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permiso para verificar el estado de la conexión a Internet -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Configuración principal de la aplicación -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IPTVPruebaDesdeCero"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Actividad principal de la aplicación -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.IPTVPruebaDesdeCero.NoActionBar">
            <!-- Filtro de intención para que esta actividad sea el punto de entrada de la aplicación -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad del reproductor de video -->
        <activity
            android:name=".PlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.IPTVPruebaDesdeCero.NoActionBar" />

    </application>

</manifest>